#:kivy 1.9.1

WindowManager:
    LoginWindow:
    MainMenu:

<LoginWindow>:
    name: "main"
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25

        orientation: 'vertical'

        MDLabel:
            id: title_label
            text: "PlaceHolder"
            font_size: 30
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: user
            hint_text: "Nombre de Usuario"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "Clave"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Iniciar Sesión"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.login(user.text, password.text)

        Widget:
            size_hint_y: None
            height: 10

    MDLabel:
        id: wrong_credentials
        text: ""
        font_size: 15
        halign: 'center'
        padding_y: 15
        opacity: 0  # Inicialmente oculto
        size_hint_y: None
        height: 0  # Inicialmente oculto

    MDLabel:
        id: is_not_admin
        text: ""
        font_size: 15
        halign: 'center'
        padding_y: 15
        opacity: 0  # Inicialmente oculto
        size_hint_y: None
        height: 0  # Inicialmente oculto


<MainMenu>:
    name: "second"
    BoxLayout:
        orientation: 'vertical'
        id: data_layout

    MDLabel:
        id: authorized
        text: ""
        font_size: 15
        halign: 'center'
        padding_y: 15
        opacity: 0  # Inicialmente oculto
        size_hint_y: None
        height: 0  # Inicialmente oculto


    MDRoundFlatButton:
        text: 'Cerrar sesión'
        on_release: 
            app.logout()
